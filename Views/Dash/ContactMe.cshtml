<!DOCTYPE html>

<html>
<head>
  <meta charset="utf-8">
  <title>My Protolfio</title>
  <meta name="description" content="LOOK AT MY ACCOMPLISHMENTS">
    <link rel="stylesheet" href="~/css/main.css"/>
</head>
<body>
  <div class="nav">
    <div class="avatar_cont">
      <img src="~/images/avatar.png" class="avatar"/>
    </div>
    <ul class="nav_list">
      <li class="nav_button"><div class="highlight"></div><a href="about_me">About Me</a></li>
      <li class="nav_button"><div class="highlight"></div><a href="projects">My Projects</a></li>
      <li class="nav_button"><div class="highlight"></div><a href="resume">Resume</a></li>
      <li class="nav_button highlighted"><div class="highlight"></div><a href="contact_me">Contact</a></li>
    </ul>
    <div class="social_media">
      <a href="https://github.com/shmashing"><img src="~/images/github_logo.png" class="media_img"/></a>
      <a href="https://www.linkedin.com/in/kyle-mcfarland-a8a037149/"><img src="~/images/linkedin.png" class="media_img"/></a>
      <a href="https://www.hackerrank.com/kyle_mcfar1291?hr_r=1"><img src="~/images/hackerrank_logo.png" class="media_img"/></a>
    </div>
  </div>

  @model Portfolio.Models.FormViewModel

  <div class="body">
    <h2 class="wht_courier contact_header">Please leave a message after the beep... Beep.</h2>
    <form asp-action="ProcessForm" asp-controller="Dash" method="POST">
      <table class="contact_table">
        <tr>
          <td><input type="text" asp-for="Name" placeholder="Name" class="contact_input"/></td>
          <td><span class="wht_courier" asp-validation-for="Name">
        </tr>
        <tr>
          <td><input type="text" asp-for="Email" placeholder="Email" class="contact_input"/></td>
          <td><span class="wht_courier" asp-validation-for="Email">
        </tr>
        <tr>
          <td><textarea type="text" asp-for="Message" placeholder="Fly you fools.." class="contact_txt"></textarea></td>
          <td><span class="wht_courier" asp-validation-for="Message">
        </tr>
        <tr>
          <td><input type="submit" value="Send Carrier Pigeon"></td>
        </tr>
      </table>
    </form>
  </div>
</body>
</html>